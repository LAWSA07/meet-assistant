{
  "manifest_version": 3,
  "name": "Tab Audio Streamer",
  "version": "1.0",
  "description": "Capture audio from any tab and stream to backend.",
  "permissions": [
    "tabCapture",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Capture Tab Audio"
  },
  "host_permissions": [
    "<all_urls>"
  ]
} 