{
  "manifest_version": 3,
  "name": "Project Co-Pilot Overlay",
  "version": "0.1.0",
  "description": "Real-time AI meeting assistant overlay for Chrome.",
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "http://127.0.0.1:8001/*",
    "ws://127.0.0.1:8001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_title": "Launch Co-Pilot",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "public/index.html",
        "public/overlay.js",
        "build/static/css/*",
        "build/static/js/*",
        "icon16.png",
        "icon48.png",
        "icon128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 